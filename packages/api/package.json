{
  "name": "comet-rewards-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Nik Marin",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:prod": "rm -rf ./dist && tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_CONFIG_DIR=./src/config LOGGER_LEVEL=debug node --inspect -r ts-node/register ./node_modules/@nestjs/cli/bin/nest.js start --watch",
    "start:dev": "NODE_ENV=develop NODE_CONFIG_DIR=./dist/config LOGGER_LEVEL=debug node --max-old-space-size=333 dist/main.mjs",
    "start:prod": "NODE_ENV=production NODE_CONFIG_DIR=./dist/config LOGGER_LEVEL=info node dist/main",
    "migrate": "knex migrate:latest --knexfile src/knexfile.ts",
    "migrate-dev": "NODE_ENV=develop knex migrate:latest --knexfile dist/knexfile.js",
    "migrate-prod": "NODE_ENV=production knex migrate:latest --knexfile dist/knexfile.js",
    "migrate:down": "knex migrate:down --knexfile src/knexfile.ts",
    "migrate:down-all": "knex migrate:rollback --all --knexfile src/knexfile.ts",
    "migrate:up-specific": "echo 'enter migration name' && read migration_name && NODE_ENV=default knex migrate:up $migration_name --knexfile src/knexfile.ts",
    "migrate:down-specific": "echo 'enter migration name' && read migration_name && NODE_ENV=default knex migrate:down $migration_name --knexfile src/knexfile.ts",
    "migrate:make": "echo 'enter migration name' && read migration_name && NODE_ENV=default knex migrate:make $migration_name --knexfile src/knexfile.ts -x ts",
    "seed": "knex seed:run --knexfile src/knexfile.ts",
    "seed:make-dev": "echo 'enter seed name' && read seed_name && knex seed:make $(($(date +%s%N)/1000000))_$seed_name --knexfile src/knexfile.ts -x ts",
    "seed:make-test": "echo 'enter seed name' && read seed_name && NODE_ENV=test knex seed:make $(($(date +%s%N)/1000000))_$seed_name --knexfile src/knexfile.ts -x ts",
    "test": "NODE_CONFIG_DIR=./src/config NODE_ENV=test LOGGER_LEVEL=debug jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_CONFIG_DIR=./src/config  jest --watch",
    "test:cov": "NODE_CONFIG_DIR=./src/config NODE_ENV=test LOGGER_LEVEL=debug  jest --runInBand --coverage",
    "test:debug": "NODE_CONFIG_DIR=./src/config  node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_CONFIG_DIR=./src/config  jest --config ./test/jest-e2e.json"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "README.md",
    "dist",
    "src"
  ],
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.2",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "@openzeppelin/merkle-tree": "^1.0.6",
    "axios": "^1.6.7",
    "config": "^3.3.11",
    "graphql": "^16.8.1",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "source-map-support": "^0.5.21",
    "typeorm": "^0.3.20",
    "web3": "^4.5.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@graphprotocol/client-cli": "^3.0.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/testing": "^10.3.2",
    "@types/config": "^3.3.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/sinon": "^17.0.3",
    "@types/source-map-support": "^0.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}
