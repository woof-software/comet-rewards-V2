{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "ES2022",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["es2022"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
